<?php

/**
 * @file
 * Install hooks for tiles_section.module
 */

/**
 * Implements hook_field_schema().
 */
function tiles_section_field_schema($field) {
  $columns = array(
    'id' => array(
      'type' => 'int',
      'unsigned' => TRUE,
      'not null' => FALSE,
      'default' => NULL,
    ),
    'value' => array(
      'type' => 'varchar',
      'length' => $field['settings']['max_length'],
      'not null' => FALSE,
    ),
    'visible' => array(
      'type' => 'int',
      'not null' => TRUE,
      'default' => 1,
    ),
  );
  return array(
    'columns' => $columns,
  );
}
